{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++: Debug current file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb.exe", // Đường dẫn gdb nếu bạn dùng MSYS2 hoặc MinGW
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build active file" // Gọi đúng task để tự động build
    }
  ]
}
